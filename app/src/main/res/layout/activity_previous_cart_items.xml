<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreviousCartItems">

    <ListView
        android:id="@+id/itemsListViewPrevious"
        android:layout_width="match_parent"
        android:layout_height="650sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yourCartPrevious"
        />
    <TextView
        android:id="@+id/yourCartPrevious"
        android:layout_width="match_parent"
        android:background="#808080"
        android:textColor="@color/black"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemsListViewPrevious"
        android:text="@string/your_cart" />
    <Button
        android:id="@+id/previousCartItemsBackButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="@string/back_arrow"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>